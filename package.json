{
  "name": "clerky-crm",
  "version": "1.0.0",
  "description": "Sistema de CRM com WhatsApp usando Node.js, React e MongoDB",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "setup": "node install-setup.js",
    "install:ffmpeg": "node install-ffmpeg-windows.js"
  },
  "keywords": [
    "whatsapp",
    "crm",
    "nodejs",
    "react",
    "mongodb",
    "socket.io"
  ],
  "author": "Clerky CRM",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "extract-zip": "^2.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.2.0",
    "mongoose": "^8.15.1",
    "multer": "^2.0.0",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.9.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1",
    "whatsapp-web.js": "^1.30.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "config": {
    "platform": {
      "windows": {
        "chromium_path": "node_modules/puppeteer/.local-chromium/win64-*/chrome-win/chrome.exe"
      },
      "mac": {
        "chromium_path": "node_modules/puppeteer/.local-chromium/mac-*/chrome-mac/Chromium.app/Contents/MacOS/Chromium"
      },
      "linux": {
        "chromium_path": "node_modules/puppeteer/.local-chromium/linux-*/chrome-linux/chrome"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/clerky-crm"
  }
}
